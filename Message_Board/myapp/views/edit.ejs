<html>
<head>
    <title>Post</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div class="container">
    <div class="row">
        <%- include('header') %>
    </div>

                <!-- create-->
    <% message.forEach(function (message) { %>
    <div class="row">
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="/images/<%= message.photo%>" height="80px" width="80px">
                    <p> <h4> <%= message.user_name %></h4> </p>
                </a>
            </div>

            <div class="media-body">
                <form class="form-horizontal"  method="post" action="/message/<%= message.message_id%>/edit">
                    <div class="form-group form-group-sm">
                        <div class="col-sm-10">
                            <h4><textarea class="form-control" name="content" rows="3" placeholder="<%= message.message_content %>"></textarea></h4>
                        </div>
                    </div>
                    <span class="form-group form-group-sm2">
                        <button type="submit" class="btn btn-success" id='btn' name="button" style="margin-left: 200px">Update</button>
                        <button type="reset" class="btn btn-info" id='btn' name="button" style="margin-left: 200px" onclick="location.href='/message'">Cancel</button>
</span>
                </form>
                <span>
           </span>
            </div>

        </div>
        </div>
    </div>
    <% }) %>
    <%- include footer%>
</div>
</body>
</html>